<h1>Log in</h1>

<div>
  <div>
    <div>
      <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
        <div>
          <%= f.label :email %>
          <%= f.email_field :email, placeholder: "Enter your email adress" %>
        </div>
        <div>
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div>
            <%= f.password_field :password, placeholder: "Enter your password" %>
          </div>
        </div>
        <div>
          <%= f.submit "Log in" %>
        </div>
      <% end %>
    </div>
    <div>
     <%= link_to '[Cancel and return to home page]', root_path %> 
    </div>
  </div>
</div>